#!/bin/sh
### BEGIN INIT INFO
# Provides:          wlanthermo-deamon
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop wlanthermo-deamon. place at /etc/init.d/wlanthermo-deamon
### END INIT INFO

deamonPath=/var/www/sites/www.wlanthermo-cloud.de/bin/deamon.js
logPath=/var/www/sites/www.wlanthermo-cloud.de/app/logs/deamon.log

case "$1" in
  start)
  forever --killSignal=SIGINT -o $logPath -e $logPath start $deamonPath
  echo "wlanthermo-deamon started"
  ;;
stop)
  forever stop $deamonPath
  echo "wlanthermo-deamon stopped"
  ;;
*)
  echo "Usage: /etc/init.d/wlanthermo-deamon {start|stop}"
  exit 1
  ;;
esac

exit 0